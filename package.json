{
    "name": "openai-chat-nextjs",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "npm run open-browser && next dev --turbopack",
        "open-browser": "start http://localhost:3000",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "stylelint": "stylelint \"**/*.{css,scss}\" --allow-empty-input",
        "tsc": "tsc --noEmit",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
        "test": "jest --runInBand --verbose",
        "test:cov": "jest --coverage --runInBand",
        "test:ci": "jest --runInBand --ci"
    },
    "dependencies": {
        "i": "^0.3.7",
        "next": "^15.5.5",
        "npm": "^11.6.2",
        "openai": "^6.3.0",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "react-markdown": "^9.0.1",
        "sass": "^1.93.2"
    },
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "@types/node": "24.7.2",
        "@types/react": "18.2.79",
        "@typescript-eslint/eslint-plugin": "^8.45.0",
        "@typescript-eslint/parser": "^8.45.0",
        "eslint": "8.57.1",
        "eslint-config-next": "^15.5.5",
        "eslint-config-prettier": "^10.1.8",
        "jest": "^29.7.0",
        "prettier": "2.8.8",
        "sass-migrator": "^2.4.2",
        "stylelint": "^16.25.0",
        "stylelint-config-recommended-scss": "^16.0.2",
        "stylelint-config-standard": "^39.0.1",
        "stylelint-scss": "^6.12.1",
        "ts-jest": "^29.4.5",
        "typescript": "5.4.5"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "jsxSingleQuote": true
    }
}
